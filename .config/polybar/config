;label-separator=margin = 0.5
format-spacing = 1
label-open = Ôáé

label-open-foreground = ${colors.yellow}
;label-close =  cancel
label-close-foreground = ${colors.yellow}
format = <label-toggle> <menu>
format-padding = 1
menu-0-0 = ÔÄë 
menu-0-0-exec = systemctl poweroff
menu-0-1 = ÔÄ° 
menu-0-1-exec = systemctl reboot
menu-0-2 = ÔÜÜ 
menu-0-2-exec = lock && systemctl suspend

